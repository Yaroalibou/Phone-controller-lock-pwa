    {
      "src": "assets/screenshot1.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Connect to Session",
      "short_name": "Connect",
      "description": "Connect to a lock session",
      "url": "/client.html?action=connect",
      "icons": [{ "src": "icons/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Lock Status",
      "short_name": "Status",
      "description": "Check current lock status",
      "url": "/client.html?action=status",
      "icons": [{ "src": "icons/icon-96x96.png", "sizes": "96x96" }]
    }
  ],
  
  "share_target": {
    "action": "/client.html",
    "method": "GET",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link"
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+phonelock",
      "url": "/client.html?session=%s"
    }
  ]
